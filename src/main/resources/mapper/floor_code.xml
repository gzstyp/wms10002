<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="floor_code">

    <sql id="sql_column">
        block_name,
        floor_humiture,
        floorId,
        kid,
        target_code,
        target_label
    </sql>

    <!-- 添加数据 -->
    <update id="add" parameterType="HashMap">
        INSERT INTO FLOOR_CODE (
        <trim suffixOverrides=",">
            <if test="block_name != null">block_name,</if>
            <if test="floor_humiture != null">floor_humiture,</if>
            <if test="floorId != null">floorId,</if>
            <if test="kid != null">kid,</if>
            <if test="target_code != null">target_code,</if>
            <if test="target_label != null">target_label</if>
        </trim>
        ) VALUES (
        <trim suffixOverrides=",">
			<if test="block_name != null">#{block_name},</if>
			<if test="floor_humiture != null">#{floor_humiture},</if>
			<if test="floorId != null">#{floorId},</if>
			<if test="kid != null">#{kid},</if>
			<if test="target_code != null">#{target_code},</if>
			<if test="target_label != null">#{target_label}</if>
        </trim>
        )
    </update>

    <!-- 批量添加|插入-->
    <update id="batchAdd" parameterType="ArrayList">
        INSERT INTO FLOOR_CODE (
            <foreach collection="list" item="item" index="index">
                <trim suffixOverrides=",">
                    <if test="index==0">
                        <if test="item.block_name != null">block_name,</if>
                        <if test="item.floor_humiture != null">floor_humiture,</if>
                        <if test="item.floorId != null">floorId,</if>
                        <if test="item.kid != null">kid,</if>
                        <if test="item.target_code != null">target_code,</if>
                        <if test="item.target_label != null">target_label</if>
                    </if>
                </trim>
            </foreach>
        ) VALUES
        <foreach collection="list" item="item" index="index" separator="," >
            (
            <trim suffixOverrides=",">
                <if test="item.block_name != null">#{item.block_name},</if>
                <if test="item.floor_humiture != null">#{item.floor_humiture},</if>
                <if test="item.floorId != null">#{item.floorId},</if>
                <if test="item.kid != null">#{item.kid},</if>
                <if test="item.target_code != null">#{item.target_code},</if>
                <if test="item.target_label != null">#{item.target_label}</if>
            </trim>
            )
        </foreach>
    </update>

	<!-- 编辑数据 -->
	<update id="edit" parameterType="HashMap">
		UPDATE FLOOR_CODE
		<trim prefix="SET" suffixOverrides=",">
            <if test="block_name != null">block_name = #{block_name},</if>
            <if test="floor_humiture != null">floor_humiture = #{floor_humiture},</if>
            <if test="floorId != null">floorId = #{floorId},</if>
            <if test="target_code != null">target_code = #{target_code},</if>
            <if test="target_label != null">target_label = #{target_label}</if>
		</trim>
		WHERE kid = #{kid} LIMIT 1
	</update>

    <!-- 根据id查询对应的数据 -->
    <select id="queryById" parameterType="String" resultType="HashMap">
        SELECT
            block_name,
            floor_humiture,
            floorId,
            target_code,
            target_label
        FROM FLOOR_CODE WHERE kid = #{kid} LIMIT 1
    </select>
	
	<!-- 行删除 -->
	<delete id="delById" parameterType="String">
		DELETE FROM FLOOR_CODE WHERE kid = #{kid} LIMIT 1
	</delete>
	
	<!-- 删除|批量删除-->
	<delete id="delByKeys" parameterType="ArrayList">
		DELETE FROM FLOOR_CODE WHERE 
			kid IN
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
		</foreach>
	</delete>
	
	<!-- listData条件查询 -->
	<sql id="sql_where_listData">
		<trim prefix="WHERE" prefixOverrides="AND">
            <if test="floorId != null">
                AND floorId LIKE CONCAT('%',#{floorId},'%')
            </if>
		</trim>
	</sql>
	
	<!-- 列表数据 -->
	<select id="listData" parameterType="HashMap" resultType="HashMap">
		SELECT
            kid,
			block_name,
			floor_humiture,
			floorId,
			target_code,
			target_label
		FROM FLOOR_CODE
		<include refid="sql_where_listData"/>
		<choose>
    	<when test="order != null and column != null">
    		ORDER BY ${column} ${order}
    	</when>
    	<otherwise>
        </otherwise>
        </choose>
        <if test="section != null and pageSize != null">
        	LIMIT #{section},#{pageSize}
		</if>
	</select>
	
	<!-- 总条数总记录数 -->
	<select id="listTotal" parameterType="HashMap" resultType="Integer">
		SELECT COUNT(kid) TOTAL FROM FLOOR_CODE
		<include refid="sql_where_listData"/>
        LIMIT 1
	</select>
</mapper>